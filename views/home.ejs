<%- include('partials/header.ejs') -%>
<div class="username">
    <img src="<%= avatar %>" width="50px" class="rounded-circle" alt="">
    <span><b>Welcome <%= username %>!</b></span>
</div>

<% if(login === 0){ %>
    <div class="loginbtn">
        <a href="/auth">
            <form action="/auth">
                <button type="button" class="btn btn-outline-primary btn-lg" type="submit">Login w/ discord</button>
            </form>
        </a>
    </div>
<% }else if(login === 1){ %>
    <div class="loginbtn">
        <a href="/dashboard">
            <form action="/dashboard">
                <button type="button" class="btn btn-outline-primary btn-lg" type="submit">Go to dashboard</button>
            </form>
        </a>
    </div>
<% } %> 
<%- include('partials/footer.ejs') -%>